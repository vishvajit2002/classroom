package Arrayeg;
import java.util.Scanner;
public class Jaggedarreg4
{
    public static void main(String[] args) 
    {
		Scanner scan = new Scanner(System.in);
        System.out.println("Enter the number of arrays:");
        int numberofarrays = scan.nextInt();
        int[][] arr = new int[numberofarrays][];
        
        int[] increments = {1,2,3,2,1}; 
        int sizeOfSubArray=scan.nextInt();
        System.out.println(sizeOfSubArray+"");
        for (int i = 0; i <increments.length ; i++) 
        {
        	sizeOfSubArray=sizeOfSubArray+increments[i];
            arr[i] = new int[sizeOfSubArray];
        }
       
        scan.close();
    }
}
