package Exceptionprg;
public class eg1
{
	public static void main(String[] args)
	{
		int n=18;
		trynumer(n);
		n=7;
		checkEvenNumber(n);
	}
	public static void trynumber(int n)
	{
		try
		{
			checkEvenNumber(n);
			System.out.println(n + "is even");
		}
		catch(IllegalArgumentException e)
		{
			System.out.println("error:"+e.getMessage());
		}
	}
}
